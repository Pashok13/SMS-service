						<li class="chart_description">
							<div class="chart_img_main chart_img2"></div>
							<div class="chart_img_main chart_img1"></div>
						</li>

					</ul>
				</section>

				<footer>
					<div class="footer_content">
						@Localizer["All rights reserved"] &copy; SMS-service 2020
